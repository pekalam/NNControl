             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NeuralNetworkControl"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="350">
    <Canvas Background="#A514202B">


        <Grid Height="50" Width="50" Canvas.Left="78" Canvas.Top="36">
            <Rectangle HorizontalAlignment="Stretch" Stroke="Black" VerticalAlignment="Stretch" Fill="#FF526AFF" />
            <TextBlock Panel.ZIndex="1" Text="W" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                       FontWeight="Bold" />
        </Grid>
        <Grid Height="50" Width="50" Canvas.Left="78" Canvas.Top="118">
            <Rectangle HorizontalAlignment="Stretch" Stroke="Black" VerticalAlignment="Stretch" Fill="#FF526AFF" />
            <TextBlock Panel.ZIndex="1" Text="b" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"
                       FontWeight="Bold" />
        </Grid>
        <Grid Height="50" Width="50" Canvas.Left="143" Canvas.Top="72">
            <Ellipse Fill="#FF526AFF" Stroke="Black" HorizontalAlignment="Stretch" />
            <TextBlock Panel.ZIndex="1" Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="26"
                       FontWeight="Bold" Margin="0,0,0,7" />
