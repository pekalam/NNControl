        <Rectangle Stroke="Black" Fill="#FF7EFFAD" Width="50" Height="50" Canvas.Left="290" Canvas.Top="75" />
        <Rectangle Stroke="Black" Fill="#FF7EFFAD" Width="50" Height="50" Canvas.Left="7" Canvas.Top="36" />

        <Rectangle Panel.ZIndex="-1" Fill="#FF7EFFAD" Width="30" Height="2" Canvas.Left="260" Canvas.Top="96" />
        <Rectangle Panel.ZIndex="-1" Fill="#FF7EFFAD" Width="17" Height="2" Canvas.Left="193" Canvas.Top="95" />
    </Canvas>
</UserControl>