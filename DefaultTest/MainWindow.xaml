<Window x:Class="DefaultTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DefaultTest"
        xmlns:nnControl="clr-namespace:NNControl;assembly=NNControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <nnControl:NeuralNetworkControl x:Name="control" ShowVis="True"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Click="Button_Click">Highlight</Button>
        </StackPanel>
    </Grid>
</Window>
